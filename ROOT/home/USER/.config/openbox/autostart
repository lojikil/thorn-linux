# Mute the microphone
amixer set Capture nocap

# Set the wallpaper
nitrogen --restore &

# Start the compositor
compton &

# Start the panel
tint2 &

# Start network manager applet
nm-applet &

# Start conky
conky &

# Start Power manager applet
xfce4-power-manager &

# Start volume manager applet
xfce4-volumed
